<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".FragReservationType">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/step3"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:text="[ 항목선택 ]"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/reser_type_s"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:text="S"
            android:textSize="40dp"
            android:layout_gravity="center"
            android:backgroundTint="#89CFCE"/>
        <Button
            android:layout_gravity="center"
            android:id="@+id/reser_type_m"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:text="M"
            android:textSize="40dp"
            android:backgroundTint="#89CFCE"/>
        <Button
            android:id="@+id/reser_type_l"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:text="L"
            android:textSize="40dp"
            android:backgroundTint="#89CFCE"/>

        <Button
            android:layout_height="50dp"
            android:layout_width="150dp"
            android:layout_gravity="left"
            android:text="◀ 이전단계로"
            android:backgroundTint="#DDC1F2EE"
            android:id="@+id/btn_reser_type_back"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>

</LinearLayout>