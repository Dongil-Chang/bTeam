<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myaccount_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_account_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:drawable/ic_menu_close_clear_cancel"
            app:backgroundTint="#000000"
            android:layout_gravity="right"/>

        <TextView
            android:id="@+id/myaccount_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="아이디"
                android:textSize="18dp"
                android:textColor="#000000"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/txtv_account_id"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="이름"
                android:textSize="18dp"
                android:textColor="#000000"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/edt_account_name"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:inputType="text"
                android:singleLine="true"
                android:background="@drawable/edt_border"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtv_account_name"
            android:layout_width="250dp"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:gravity="left"
            android:layout_height="15dp"
            android:textSize="12dp"
            android:textColor="#FF0000"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="비밀번호"
                android:textSize="18dp"
                android:textColor="#000000"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/edt_account_pw"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:inputType="textPassword"
                android:singleLine="true"
                android:background="@drawable/edt_border"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtv_account_pw"
            android:layout_width="250dp"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:gravity="left"
            android:layout_height="15dp"
            android:textSize="12dp"
            android:textColor="#FF0000"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="비밀번호확인"
                android:textSize="18dp"
                android:textColor="#000000"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/edt_account_pwchk"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:inputType="textPassword"
                android:singleLine="true"
                android:background="@drawable/edt_border"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtv_account_pwchk"
            android:layout_width="250dp"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:gravity="left"
            android:layout_height="15dp"
            android:textSize="12dp"
            android:textColor="#FF0000"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="이메일"
                android:textSize="18dp"
                android:textColor="#000000"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/edt_account_email"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:background="@drawable/edt_border"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtv_account_email"
            android:layout_width="250dp"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:gravity="left"
            android:layout_height="15dp"
            android:textSize="12dp"
            android:textColor="#FF0000"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="주소"
                android:textSize="18dp"
                android:textColor="#000000"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/txtv_account_addr1"
                android:layout_width="150dp"
                android:layout_height="38dp"
                android:background="@drawable/edt_border"
                android:gravity="center" />

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:backgroundTint="#89CFCE"
                android:text="우편번호검색"
                android:textSize="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textSize="18dp"
                android:textColor="#000000"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/txtv_account_addr2"
                android:layout_width="250dp"
                android:layout_height="38dp"
                android:gravity="center_vertical"
                android:background="@drawable/edt_border"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textSize="18dp"
                android:textColor="#000000"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/edt_account_addr3"
                android:layout_width="250dp"
                android:layout_height="38dp"
                android:hint="상세 주소 입력"
                android:inputType="text"
                android:layout_marginTop="3dp"
                android:background="@drawable/edt_border"
                android:gravity="center" />
        </LinearLayout>

        <TextView
            android:layout_width="250dp"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:gravity="left|center_vertical"
            android:layout_height="30dp"
            android:lineSpacingMultiplier="0.8"
            android:textSize="10dp"
            android:text="주소를 정확히 기입해주세요.\n(주소를 잘못 작성해 발생하는 불이익엔 책임지지 않습니다.)"
            android:textColor="#000" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="연락처"
                android:textSize="18dp"
                android:textColor="#000000"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/edt_account_tel"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:inputType="number"
                android:background="@drawable/edt_border"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtv_account_tel"
            android:layout_width="250dp"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:gravity="left"
            android:layout_height="15dp"
            android:textSize="12dp"
            android:textColor="#FF0000"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="생년월일"
                android:textSize="18dp"
                android:textColor="#000000"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/txtv_account_birth"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:inputType="date"
                android:background="@drawable/edt_border"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center">

            <DatePicker
                android:id="@+id/datePicker_account"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:calendarViewShown="true"
                android:datePickerMode="spinner"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btn_account_update"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="개인정보수정하기"
            android:backgroundTint="#89CFCE"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>
    </LinearLayout>
</ScrollView>